<div class="card shadow-sm mb-4">
  <div class="card-header yellow-header">
    <h3 class="mb-0"><%= @deck.name %></h3>
  </div>
  <div class="card-body">
    <% if @deck.game %>
      <p class="card-text"><strong>Game:</strong> <%= link_to @deck.game.name, @deck.game %><% if @deck.game.edition.present? %> (<%= @deck.game.edition %>)<% end %></p>
    <% end %>
    <p class="card-text"><strong>Owner:</strong> <%= link_to @deck.user.username, @deck.user %></p>
    <% if @deck.private? %>
      <p class="card-text"><span class="badge bg-secondary">Private</span></p>
    <% end %>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-header yellow-header">
    <h4 class="mb-0">Cards</h4>
  </div>
  <div class="card-body p-0">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>Card Name</th>
          <th class="text-end">Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% @deck.deck_cards.each do |deck_card| %>
          <tr>
            <td><%= link_to deck_card.card.name, deck_card.card %></td>
            <td class="text-end"><%= deck_card.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="text-end mt-3 mb-4">
  <%= link_to 'Edit', edit_deck_path(@deck), class: 'btn btn-primary me-2' %>
  <%= link_to 'Back', decks_path, class: 'btn btn-outline-primary' %>
</div>
