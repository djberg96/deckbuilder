<p id="notice"><%= notice %></p>

<div class="card shadow-sm mb-4">
  <div class="card-header">
    <h3 class="mb-0"><%= @game.name %></h3>
  </div>
  <div class="card-body">
    <p class="card-text"><strong>Edition:</strong> <%= @game.edition %></p>
    <p class="card-text"><strong>Description:</strong> <%= @game.description %></p>
    <p class="card-text"><strong>Minimum Deck Size:</strong> <%= @game.minimum_cards_per_deck %></p>
  </div>
</div>

<div class="text-end mt-3">
  <%= link_to 'Edit', edit_game_path(@game), class: 'btn btn-primary me-2' %>
  <%= link_to 'Back', games_path, class: 'btn btn-secondary' %>
</div>
