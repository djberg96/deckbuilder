
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Games</h1>
  <%= link_to 'New Game', new_game_path, class: 'btn btn-primary' %>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Edition</th>
          <th class="text-center">Decks</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody class="align-middle">
        <% @games.each do |game| %>
          <tr>
            <td><%= link_to game.name, game %></td>
            <td><%= game.edition.present? ? game.edition : '-' %></td>
            <td class="text-center"><%= (game.respond_to?(:decks_count) ? game.decks_count.to_i : game.total_decks) %></td>
            <td class="text-end">
              <%= link_to 'Edit', edit_game_path(game), class: 'btn btn-outline-primary btn-sm me-1' %>
              <%= link_to 'Delete', game, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
