<%= form_with(model: card, html: { class: 'needs-validation' }, multipart: true) do |form| %>
  <% if card.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h4>
      <ul class="mb-0">
        <% card.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control', size: 50, autofocus: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :game_id, 'Game', class: 'form-label' %>
    <%= form.select :game_id, Game.all.map { |game| [game.edition.present? ? "#{game.name} (#{game.edition})" : game.name, game.id] }, {}, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= form.label :image_file, 'Card Image', class: 'form-label' %>
    <%= form.file_field :image_file, class: 'form-control', accept: 'image/*' %>
    <% if card.has_image? %>
      <div class="mt-2">
        <small class="text-muted">Current image:</small><br>
        <%= image_tag "data:#{card.image_content_type};base64,#{Base64.encode64(card.image_data)}", size: "200x200", class: 'img-thumbnail mt-1' %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <label class="form-label">Attributes</label>
    <% existing_keys = card.game ? card.game.cards.where.not(id: card.id).pluck(:data).compact.flat_map { |d| d.respond_to?(:keys) ? d.keys : [] }.uniq : [] %>
    <% if existing_keys.any? %>
      <small class="form-text text-muted">Suggested attributes from other cards in this game: <%= existing_keys.join(', ') %></small>
    <% end %>
    <div id="attributes-container">
      <% (card.data || {}).each_with_index do |(key, value), index| %>
        <div class="attribute-row d-flex mb-2">
          <input type="text" name="card[attributes][<%= index %>][key]" value="<%= key %>" class="form-control me-2" placeholder="Attribute name" style="flex: 1;">
          <input type="text" name="card[attributes][<%= index %>][value]" value="<%= value %>" class="form-control me-2" placeholder="Value" style="flex: 2;">
          <button type="button" class="btn btn-outline-danger" onclick="removeAttribute(this)">Remove</button>
        </div>
      <% end %>
    </div>
    <button type="button" class="btn btn-outline-secondary btn-sm mt-2" onclick="addAttribute()">+ Add Attribute</button>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<script>
function addAttribute() {
  const container = document.getElementById('attributes-container');
  const index = container.children.length;
  const row = document.createElement('div');
  row.className = 'attribute-row d-flex mb-2';
  row.innerHTML = `
    <input type="text" name="card[attributes][${index}][key]" class="form-control me-2" placeholder="Attribute name" style="flex: 1;">
    <input type="text" name="card[attributes][${index}][value]" class="form-control me-2" placeholder="Value" style="flex: 2;">
    <button type="button" class="btn btn-outline-danger" onclick="removeAttribute(this)">Remove</button>
  `;
  container.appendChild(row);
}

function removeAttribute(button) {
  button.closest('.attribute-row').remove();
}
</script>
