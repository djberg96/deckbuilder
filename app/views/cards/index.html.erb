
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Cards</h1>
  <div>
    <%= form_with url: cards_path, method: :get, local: true, html: { class: 'd-inline' } do %>
      <div class="input-group">
        <label class="input-group-text" for="filter_game">Filter</label>
        <%= select_tag :game_id, options_for_select([['All games', '']] + (@games || []).map { |g| [g.name, g.id] }, params[:game_id]), id: 'filter_game', class: 'form-select', onchange: 'this.form.submit()' %>
      </div>
    <% end %>
    <%= link_to 'New Card', new_card_path, class: 'btn btn-primary ms-2' %>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Game</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody class="align-middle">
        <% @cards.each do |card| %>
          <tr>
            <td><%= link_to card.name, card %></td>
            <td><%= link_to card.game.name, game_path(card.game) %></td>
            <td class="text-end">
              <%= link_to 'Edit', edit_card_path(card), class: 'btn btn-outline-primary btn-sm me-1' %>
              <%= link_to 'Delete', card, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
// submit filter form when selection changes
function attachFilterSubmit() {
  var sel = document.getElementById('filter_game');
  if (sel && !sel.dataset.filterHandlerAttached) {
    sel.addEventListener('change', function() { sel.form.submit(); });
    sel.dataset.filterHandlerAttached = 'true';
  }
}

// Attach on initial load and Turbo navigation events
document.addEventListener('DOMContentLoaded', attachFilterSubmit);
document.addEventListener('turbo:load', attachFilterSubmit);
</script>
