
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Cards</h1>
  <div class="d-flex align-items-center">
    <div class="me-2">
      <div class="input-group">
        <label class="input-group-text" for="filter_game">Filter</label>
        <%= select_tag :game_id, options_for_select([['All games', '']] + (@games || []).map { |g| [g.name, g.id] }, params[:game_id]), id: 'filter_game', class: 'form-select form-select-sm', onchange: "clientFilterByGame(this.value); updateUrlGameParam(this.value);" %>
      </div>
    </div>

    <form method="get" action="<%= cards_path %>" class="me-3 d-flex align-items-center">
      <input type="hidden" name="game_id" value="<%= params[:game_id].to_s %>">
      <label class="me-2 mb-0">Per page</label>
      <select name="per_page" class="form-select form-select-sm me-2" onchange="this.form.submit();">
        <% [10,25,50].each do |opt| %>
          <option value="<%= opt %>" <%= 'selected' if defined?(@per_page) && @per_page == opt %>><%= opt %></option>
        <% end %>
      </select>
      <noscript><button class="btn btn-sm btn-outline-secondary">Apply</button></noscript>
    </form>

    <button class="btn btn-secondary me-2" data-bs-toggle="modal" data-bs-target="#importCardsModal">Import</button>

    <%= link_to 'New Card', new_card_path, class: 'btn btn-primary' %>
  </div>

  <!-- Import modal -->
  <div class="modal fade" id="importCardsModal" tabindex="-1" aria-labelledby="importCardsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <form action="<%= import_cards_path %>" method="post" enctype="multipart/form-data">
          <div class="modal-header">
            <h5 class="modal-title" id="importCardsModalLabel">Import Cards (JSON or XML)</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= csrf_meta_tags %>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div class="mb-3">
              <label for="import_game_id" class="form-label">Target Game</label>
              <select id="import_game_id" name="import[game_id]" class="form-select">
                <option value="">-- select existing --</option>
                <% @games.each do |g| %>
                  <option value="<%= g.id %>"><%= g.name %> (<%= g.edition %>)</option>
                <% end %>
                <option value="__new__">Create new game...</option>
              </select>
            </div>

            <div class="row mb-3" id="new-game-fields" style="display:none;">
              <div class="col">
                <input type="text" name="import[new_game_name]" class="form-control" placeholder="Game name">
              </div>
              <div class="col">
                <input type="text" name="import[new_game_edition]" class="form-control" placeholder="Edition (optional)">
              </div>
            </div>

            <div class="mb-3">
              <label for="import_file" class="form-label">Upload file (JSON or XML)</label>
              <input class="form-control" type="file" id="import_file" name="import[file]" accept=".json,.xml,text/json,text/xml,application/xml,application/json">
            </div>

            <div class="mb-3">
              <label for="import_raw_text" class="form-label">Or paste content</label>
              <textarea id="import_raw_text" name="import[raw_text]" rows="8" class="form-control" placeholder='Paste JSON array or XML with <cards><card>...'></textarea>
            </div>

            <div class="form-text">Card entries should include at least a <code>name</code>. Other fields will be stored in the card's data attributes.</div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Import</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    (function(){
      var sel = document.getElementById('import_game_id');
      if (!sel) return;
      sel.addEventListener('change', function(){
        var nf = document.getElementById('new-game-fields');
        if (sel.value === '__new__') { nf.style.display = ''; } else { nf.style.display = 'none'; }
      });
    })();
  </script>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <div class="p-3 d-flex justify-content-between align-items-center">
      <div>
        <% start_idx = (@current_page - 1) * @per_page + 1 %>
        <% end_idx = [start_idx + @cards.length - 1, @total_count].min %>
        <small class="text-muted">Showing <strong><%= start_idx %>–<%= end_idx %></strong> of <strong><%= @total_count %></strong></small>
      </div>
      <div>
        <% if defined?(@total_pages) && @total_pages > 1 %>
          <nav aria-label="Cards pagination">
            <ul class="pagination mb-0">
              <% if @current_page > 1 %>
                <li class="page-item">
                  <%= link_to 'Previous', cards_path(request.query_parameters.merge(page: @current_page - 1)), class: 'page-link' %>
                </li>
              <% else %>
                <li class="page-item disabled"><span class="page-link">Previous</span></li>
              <% end %>

              <% 1.upto(@total_pages) do |p| %>
                <% if (p - @current_page).abs <= 3 || p == 1 || p == @total_pages %>
                  <li class="page-item <%= 'active' if p == @current_page %>">
                    <%= link_to p.to_s, cards_path(request.query_parameters.merge(page: p)), class: 'page-link' %>
                  </li>
                <% elsif (p == @current_page - 4) || (p == @current_page + 4) %>
                  <li class="page-item disabled"><span class="page-link">…</span></li>
                <% end %>
              <% end %>

              <% if @current_page < @total_pages %>
                <li class="page-item">
                  <%= link_to 'Next', cards_path(request.query_parameters.merge(page: @current_page + 1)), class: 'page-link' %>
                </li>
              <% else %>
                <li class="page-item disabled"><span class="page-link">Next</span></li>
              <% end %>
            </ul>
          </nav>
        <% end %>
      </div>
    </div>

    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Game</th>
          <th>Edition</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody class="align-middle">
        <% @cards.each do |card| %>
          <tr data-game-id="<%= card.game_id %>">
            <td><%= link_to card.name, card %></td>
            <td>
              <% if card.game %>
                <%= link_to card.game.name, game_path(card.game) %>
              <% else %>
                <em>No game</em>
              <% end %>
            </td>
            <td><%= card.game&.edition.present? ? card.game.edition : '-' %></td>
            <td class="text-end">
              <%= link_to 'Edit', edit_card_path(card), class: 'btn btn-outline-primary btn-sm me-1' %>
              <%= link_to 'Delete', card, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
// Client-side filtering: hide/show rows based on selected game and update URL
function clientFilterByGame(gameId) {
  var rows = document.querySelectorAll('tbody.align-middle tr[data-game-id]');
  rows.forEach(function(r) {
    if (!gameId || gameId === '') { r.style.display = ''; return; }
    if (r.dataset.gameId === gameId.toString()) { r.style.display = ''; } else { r.style.display = 'none'; }
  });
}

function updateUrlGameParam(gameId) {
  var url = new URL(window.location.href);
  if (!gameId || gameId === '') {
    url.searchParams.delete('game_id');
  } else {
    url.searchParams.set('game_id', gameId);
  }
  window.history.replaceState({}, '', url.toString());
}

function attachClientFilter() {
  var sel = document.getElementById('filter_game');
  if (!sel || sel.dataset.clientHandlerAttached) return;

  function handler() {
    var v = sel.value;
    clientFilterByGame(v);
    updateUrlGameParam(v);
  }

  // register multiple events to handle browser quirks (esp. Firefox)
  sel.addEventListener('change', handler);
  sel.addEventListener('input', handler);
  sel.addEventListener('keyup', function(e) { if (e.key === 'Enter') handler(); });
  sel.addEventListener('mouseup', handler);
  sel.addEventListener('blur', handler);

  // pageshow covers bfcache/back navigation
  window.addEventListener('pageshow', function() { handler(); });

  sel.dataset.clientHandlerAttached = 'true';

  // apply initial filter if a param is present
  var params = new URL(window.location.href).searchParams;
  if (params.get('game_id')) {
    clientFilterByGame(params.get('game_id'));
    // set select value if not set
    if (!sel.value) sel.value = params.get('game_id');
  }
}

document.addEventListener('DOMContentLoaded', attachClientFilter);
document.addEventListener('turbo:load', attachClientFilter);
</script>
